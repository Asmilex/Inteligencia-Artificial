<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">

<!--Extraer información sobre el día-->>

<category>
    <pattern> ^ el (dia) <set>number</set> de *  ^ <set>tener_condicional</set> ^ </pattern>
    <template>
        <think>
            <set name="dia">
                <star index="2"/>
            </set>

            <set name="mes_letra">
                <star index="3"/>
            </set>

            <set name="mes_index">
                <map name="month_index_ES"><get name="mes_letra"/></map>
            </set>

            <set name="full_day">
                <map name="anade_cero"><get name="dia"/></map>-<get name="mes_index"/>-20
            </set>
        </think>

        <srai>COMRPOBAR_DIA_Y_RESPONDER</srai>

    </template>
</category>

<category>
    <pattern> ^ <set>tener_condicional</set> ^ el (dia) <set>number</set> de * </pattern>
    <template>
        <think>
            <set name="dia">
                <star index="4"/>
            </set>

            <set name="mes_letra">
                <star index="5"/>
            </set>

            <set name="mes_index">
                <map name="month_index_ES"><get name="mes_letra"/></map>
            </set>

            <set name="full_day">
                <map name="anade_cero"><get name="dia"/></map>-<get name="mes_index"/>-20
            </set>
        </think>

        <srai>COMRPOBAR_DIA_Y_RESPONDER</srai>
    </template>
</category>


<category>
    <pattern> ^ a las * </pattern>
    <template>
        <set name="hora">
            <star index="2"/>
        </set>

        <srai>MARK OCUPADO AT <get name="hora"/> ON <get name="full_day"/></srai>

        Quiere otra hora? Tengo las siguientes disponibles:

        <srai> COMPROBAR HORAS DIA <get name="full_day"/> </srai>
        <get name="horas_disponibles"/>
    </template>
</category>

<category>
    <pattern>No</pattern>
    <template> Ok, muchas gracias </template>
</category>


<category>
    <pattern> Me da igual </pattern>
    <template>
        <think>
            <set name="hora">
                <srai> SUBLIST FROM 1 TO 1 OF <get name="horas_disponibles"/> </srai>
            </set>

            <set name = "topic">propongo_horas</set>
        </think>

        Te gustaría a las <get name="hora"/>?
    </template>
</category>



<topic name = "propongo_horas">

<category>
    <pattern> No </pattern>
    <template>
        <set name="horas_disponibles">
            <srai> REMOVE 1 FIRST ELEMENT FROM <get name="horas_disponibles"/> </srai>
        </set>
        <srai> Me da igual </srai>
    </template>
</category>

<category>
    <pattern> Si </pattern>
    <template>
        <think>
            <set name = "topic">unknown</set>
        </think>
        De SPM socio, te lo marco.
        <srai> a las <get name="hora"/> </srai>

    </template>
</category>

</topic>

<!--Resolutores-->

<category>
    <pattern> COMRPOBAR_DIA_Y_RESPONDER </pattern>
    <template>
        <srai> COMPROBAR HORAS DIA <get name="full_day"/> </srai>

        <condition name="hay_hueco">
            <li value="true">
                Para el día <get name="full_day"/> tengo:
                <get name="horas_disponibles"/>.

                A que hora quieres
            </li>
            <li value="false">
                Lo siento, no tengo hueco ese día. Quieres otro?
            </li>
        </condition>
    </template>
</category>


<category>
    <pattern> COMPROBAR HORAS DIA * </pattern>
    <template>
        <think>
            <set var="listado_sucio">
                <srai> LIST OF DAY <star index="1"/> </srai>
            </set>

            <set var="iterador">0</set>

            <!--Listado en formato null OCUPADO-->
            <set var="item">
                <srai> ITERATE <get var="listado_sucio"/> </srai>
            </set>

            <set name="horas_disponibles"></set>

            <set name="hay_hueco">false</set>

            <condition var="item">
                <li value="end"> </li>

                <li value="null">
                    <!-- Hora disponible => sacar a la lista -->

                    <set name="horas_disponibles">
                        <get name="horas_disponibles"/> <map name="anade_cero"><get var="iterador"/></map>:00
                    </set>

                    <set var="iterador">
                        <srai> PLUS <get var="iterador"/> 1 </srai>
                    </set>

                    <set var="item">
                        <srai> NEXT </srai>
                    </set>

                    <set name="hay_hueco">true</set>

                    <loop/>
                </li>

                <li value="OCUPADO">
                    <!-- Este valor no nos vale, siguiente -->

                    <set var="iterador">
                        <srai> PLUS <get var="iterador"/> 1 </srai>
                    </set>

                    <set var="item">
                        <srai> NEXT </srai>
                    </set>

                    <loop/>
                </li>
            </condition>
        </think>
    </template>
</category>
</aiml>